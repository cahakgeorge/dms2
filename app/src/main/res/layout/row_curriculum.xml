<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dip"
    android:gravity="left|top">


    <LinearLayout
        android:id="@+id/lay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:weightSum="30"
        android:gravity="start|top"
        android:background="@drawable/backg"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:weightSum="9"
        android:gravity="start|center"
        android:background="@color/dmsPurple900"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Week"
            android:ellipsize="end"
            android:lines="1"
            android:textScaleX="1"
            android:textSize="24dp"
            android:textColor="@color/dmsLavender"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|center"/>

        <TextView
            android:id="@+id/_curr_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:ellipsize="end"
            android:lines="1"
            android:textScaleX="1"
            android:textSize="18dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/dmsLavender"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textAlignment="gravity"
            android:gravity="center_horizontal|top"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:weightSum="6"
        android:gravity="start|top"
        >
        <TextView
            android:id="@+id/_curr_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:text="Calculating the Time"
            android:ellipsize="end"
            android:lines="1"
            android:textScaleX="1"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/dmsLavender"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textAlignment="gravity"
            android:gravity="left|center_vertical"/>

        <TextView
            android:id="@+id/_curr_extra"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:text=">Clock \n>Watches"
            android:textScaleX="1"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/dmsLavender"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:textAlignment="gravity"
            android:gravity="left|top"
            android:paddingLeft="5dp"/>


        <!--<TextView
            android:id="@+id/_news_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:text="Open days are an important part of your childs school life"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="13sp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/AntiqueWhite"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textAlignment="gravity"
            android:gravity="left|center_vertical"/>-->

    </LinearLayout>


    </LinearLayout>

</RelativeLayout>

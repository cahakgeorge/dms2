<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="6dip"
    android:gravity="left|top"
    android:background="@android:color/transparent"
    >

        <LinearLayout
            android:id="@+id/lay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="7"
            android:background="@drawable/select_roundrect_background_managteachers">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:weightSum="8"
                 />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:weightSum="6"
                android:gravity="start|center_vertical"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:weightSum="8"
                    />


                <TextView android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/dmsDarkGrey"
                    android:text="DOB: "
                    />
                <TextView android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:id="@+id/_tdob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/dmsDarkGrey"
                    android:text=""
                    />

                <TextView android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:id="@+id/_taccess"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.6"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:textColor="@color/dmsDarkGrey"
                    android:text="Status: "
                    android:gravity="center_horizontal"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:weightSum="8"
                    />

                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:weightSum="3.5"
                android:gravity="start|center_vertical"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:weightSum="8"
                    />

                <TextView android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:id="@+id/_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/DarkSlateGray"
                    android:text=""
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="3"
                android:gravity="start|top"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:weightSum="8"
                    />

                <TextView android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:id="@+id/_tusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/dmsDarkGrey"
                    android:text="\@"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:weightSum="8"
                    />

                <TextView android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:id="@+id/_tgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/dmsPink"
                    android:text=""
                    />

            </LinearLayout>


        </LinearLayout>

</RelativeLayout>
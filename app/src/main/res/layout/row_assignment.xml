<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dip"
    android:gravity="left|top"
    android:id="@+id/_assign_layout"
    >


    <LinearLayout
        android:id="@+id/lay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:weightSum="6"
        android:gravity="start|top"
        android:background="@drawable/select_sqrect_background4white"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="110dp"
            android:weightSum="5"
            android:layout_marginLeft="2dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

            <LinearLayout
                android:id="@+id/_ini_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dmsPurple"
                android:orientation="vertical"
                />

                <TextView
                    android:id="@+id/_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="M+"
                    android:textColor="@color/White"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                   android:textScaleX="1.1"
                    android:scaleY="1.6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4.7"
        android:layout_height="108dp"
        android:weightSum="6"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal|top"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:weightSum="5"
            android:layout_marginLeft="0dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/_assign_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textScaleX="0.9"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="gravity"
                android:gravity="left"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=">>"
                android:textScaleX="0.6"
                android:textColor="@color/GreyTextFb"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="gravity"
                android:gravity="end"/>

            <TextView
                android:id="@+id/_assign_class"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Year 2"
                android:textSize="15sp"
                android:textScaleX="0.9"
                android:textColor="@color/dmsDarkGrey"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="gravity"
                android:gravity="center_vertical|end"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:weightSum="5"
            android:layout_marginLeft="0dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/_assign_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mathematics can be a very good course for discuss in the twentf first century. Discuss on that and produce feedback to the general public n how to go about it and the name of the pre"
                android:ellipsize="end"
                android:textScaleX="0.9"
                android:layout_marginLeft="8dp"
                android:drawableRight="@drawable/arrowlay"
                android:textColor="@color/dmsPurple"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="gravity"
                android:gravity="left"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginTop="0dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/_assign_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submission date : "
                android:textScaleX="0.8"
                android:textSize="13sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/dmsDarkGrey"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="gravity"
                android:gravity="left"/>

            <TextView
                android:id="@+id/_assign_date_cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday 24th (tomorrow)"
                android:textScaleX="0.65"
                android:textSize="11sp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/dmsDarkGrey"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:textAlignment="gravity"
                android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="5"
            android:layout_marginLeft="0dp"
            android:gravity="right|center_vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/_assignee_nameholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent in by :"
                android:textColor="@color/dmsPink"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="8sp"
                android:layout_marginLeft="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle.Inverse"
                android:textAlignment="gravity"
                android:gravity="left"/>

            <TextView
                android:id="@+id/_assigner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr Destiny"
                android:textColor="@color/dmsPurple"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="8.5sp"
                android:layout_marginLeft="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                android:textAlignment="gravity"
                android:gravity="left"/>

        </LinearLayout>

    </LinearLayout>

